@model IEnumerable<nauteck.data.Entities.Status.Status>


<div class="m-2 p-2 rounded-3 border shadow-lg">

    <div class="row p-2">
        <div class="col">
            <p class="lead fw-bold text-uppercase">Statussen</p>
        </div>
        <div class="col">
            <a asp-action="Edit" asp-route-id="@Guid.Empty" class="btn btn-primary text-white float-end" title="Toevoegen"><i class="bi bi-brush"></i>&nbsp;Nieuwe Status</a>
        </div>
    </div>

    <table class="table table-striped table-bordered" id="table-status">
        <thead>
            <tr>
                <th>#</th>
                <th>Status</th>
                <th>Modified At</th>
                <th>Modified By</th>
                <th>Active</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in Model)
            {
                <tr>
                    <td><a asp-action="Edit" asp-route-id="@status.Id" class="btn btn-sm btn-warning" title="Status bewerken"><i class="bi bi-pencil-square"></i></a></td>
                    <td>@status.Name</td>
                    <td>@status.ModifiedAt</td>
                    <td>@status.ModifiedBy</td>
                    <td>
                        @if (status.Active)
                        {
                            <i class="bi bi-check-circle-fill text-success"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger"></i>
                        }
                    </td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-danger" data-url="@Url.Action("Delete", "Status", new { status.Id })" data-type="delete" title="Verwijderen" type="button"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<script src="~/js/status/index.js" asp-asp-append-version="true"></script>