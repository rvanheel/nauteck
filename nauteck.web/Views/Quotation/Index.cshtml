@using nauteck.data.Dto
@model IEnumerable<QuotationDto>

<div class="m-2 p-2 rounded-3 border shadow-lg">

    <div class="row p-2">
        <div class="col">
            <p class="lead fw-bold text-uppercase">Offertes</p>
        </div>
        <div class="col-auto">
            <a asp-action="Edit" asp-route-id="@Guid.Empty" class="btn btn-primary"><i class="bi bi-plus"></i>&nbsp;Toevoegen</a>
        </div>
    </div>

    <table class="table table-bordered" id="table-quotations">
        <thead>
            <tr>
                <th></th>
                <th class="text-center">Datum</th>
                <th>Referentie</th>
                <th></th>
                <th>Status</th>
                <th>Omschrijving</th>
                <th>Bedrag</th>
                <th class="text-center">Pdf</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var q in Model)
            {
                <tr>
                    <td class="text-center"><a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-warning btn-sm" title="Bewerken"><i class="bi bi-pencil"></i></a></td>
                    <td class="text-center">@($"{q.Date:dd-MM-yyyy}")</td>
                    <td>@q.Reference</td>
                    <td>
                        <strong>@q.Preamble @q.FirstName @q.Infix @q.LastName</strong>
                        <address>
                            @q.Address @q.Number@q.Extension<br />
                            @q.Zipcode @q.City<br />
                            @q.Region @q.Country
                        </address>
                    </td>
                    <td>@q.Status</td>
                    <td>@q.Description</td>
                    <td>@($"{q.Amount:n2}")</td>
                    <td class="text-center"><a asp-action="Pdf" asp-route-id="@q.Id" class="btn btn-light btn-outline-secondary btn-sm"><i class="bi bi-file-pdf-fill"></i></a></td>
                    <td class="text-center"><a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-danger btn-sm" title="Verwijderen"><i class="bi bi-trash"></i></a></td>
                </tr>
            }
    </table>
</div>