@model IEnumerable<nauteck.data.Entities.Dealer.Dealer>

<div class="m-2 p-2 rounded-3 border shadow-lg">

    <div class="row p-2">
        <div class="col">
            <p class="lead fw-bold text-uppercase">Dealers</p>
        </div>
        <div class="col">
            <a class="btn btn-primary text-white float-end" title="Toevoegen"><i class="bi bi-brush"></i>&nbsp;New Dealer</a>
        </div>
    </div>


    <table class="table table-striped table-bordered" id="table-dealer">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Provision</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td><a class="btn btn-sm btn-warning" href=""><i class="bi bi-pencil-square"></i></a></td>
                    <td>@record.Name</td>
                    <td><address>
                        @record.Address @record.Number@record.Extension<br />
                        @record.Zipcode @record.City<br />
                        @record.Country
                    </address></td>
                    <td>@record.Phone</td>
                    <td>@record.Email</td>
                    <td>@($"{record.Provision:n0}%")</td>
                    <td>
                        @if (record.Active)
                        {
                            <i class="bi bi-check-circle-fill text-success"></i> 
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger"></i>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', ()=>{
            $("#table-dealer").DataTable({
                autoWidth: false,
                columnDefs:[
                    { targets: [0, 6], className: "text-center", orderable: false, searchable: false, width: "2rem"},
                    {targets:[3], width: '10rem'},
                    { targets: [5], type: 'num', width: '5rem' },
                    
                ],
                order: [[1, 'asc']],
                deferRender: true,
                processing: true,
                stateSave: true
            });
        });
    </script>
}