<!DOCTYPE html>
<html lang="nl">
<head>
    <title>Nauteck Flooring</title>
    <base href="/">
    <meta charset="UTF-8">
    <meta name="description" content="Nauteck Flooring">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.1/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nauteck.web.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png">
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rubik&amp;amp;display=swap">
</head>
<body class="bg-light">
    <main>
        <div class="d-flex flex-column flex-shrink-0 p-2 text-white bg-dark" style="width: 20rem">
            <span>Floor</span>
            <hr style="color: white" />
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item"><a aria-current="page" asp-controller="Home" asp-action="Quotation" class="nav-link text-white" title="Floor"><i class="bi bi-apple"></i>&nbsp;Offertes</a></li>
                <li class="nav-item"><a aria-current="page" asp-controller="Home" asp-action="Index" class="nav-link text-white" title="Floor"><i class="bi bi-apple"></i>&nbsp;Orders</a></li>
            </ul>

            <span>Administratie</span>
            <hr style="color: white" />
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item"><a asp-controller="Dealer" asp-action="Index" class="nav-link text-white" aria-current="page" title="Dealers"><i class="bi bi-people"></i>&nbsp;Dealers</a></li>
                <li class="nav-item"><a aria-current="page" asp-controller="Account" asp-action="Logout" class="nav-link text-white" title="Afmelden"><i class="bi bi-box-arrow-left"></i>&nbsp;Afmelden</a></li>
            </ul>

            <span>Floors</span>
            <hr style="color: white" />
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item"><a asp-controller="Floor" asp-action="Index" class="nav-link text-white" aria-current="page" title="Floor"><i class="bi bi-file-earmark-medical-fill"></i>&nbsp;Floor</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="StandardColor" class="nav-link text-white" aria-current="page" title="Standard Colors"><i class="bi bi-brush"></i>&nbsp;Standard Colors</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="ExclusiveColor" class="nav-link text-white" aria-current="page" title="Exclusive Colors"><i class="bi bi-brush"></i>&nbsp;Exclusive Colors</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Design" class="nav-link text-white" aria-current="page" title="Designs"><i class="bi bi-people"></i>&nbsp;Designs</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Logo" class="nav-link text-white" aria-current="page" title="Logos"><i class="bi bi-people"></i>&nbsp;Logos</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Measurement" class="nav-link text-white" aria-current="page" title="Measurement"><i class="bi bi-people"></i>&nbsp;Measurement</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Construction" class="nav-link text-white" aria-current="page" title="Construction"><i class="bi bi-people"></i>&nbsp;Construction</a></li>
            </ul>

            <span>Articles</span>
            <hr style="color: white" />
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item"><a asp-controller="Article" asp-action="Index" class="nav-link text-white" aria-current="page" title="Supplier"><i class="bi bi-people"></i>&nbsp;Supplier</a></li>
                <li class="nav-item"><a asp-controller="Article" asp-action="Index" class="nav-link text-white" aria-current="page" title="Category"><i class="bi bi-people"></i>&nbsp;Category</a></li>
                <li class="nav-item"><a asp-controller="Article" asp-action="Index" class="nav-link text-white" aria-current="page" title="SubCategory"><i class="bi bi-people"></i>&nbsp;SubCategory</a></li>
                <li class="nav-item"><a asp-controller="Article" asp-action="Index" class="nav-link text-white" aria-current="page" title="Article"><i class="bi bi-people"></i>&nbsp;Article</a></li>
            </ul>

        </div>
        <div class="b-example-divider"></div>
        <div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white" style="width: calc(100vw - 20rem - 0.5rem);">
            @RenderBody()
        </div>

    </main>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/6.0.0/bootbox.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.min.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await RenderSectionAsync("Scripts", required: false);
    }

</body>
</html>
