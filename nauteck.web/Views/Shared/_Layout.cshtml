<!DOCTYPE html>
<html lang="nl">
<head>
    <title>Nauteck Flooring</title>
    <base href="/">
    <meta charset="UTF-8">
    <meta name="description" content="Nauteck Flooring">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nauteck.web.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rubik&amp;amp;display=swap">
</head>
<body class="bg-light-gray">
    <main>
        <div class="d-flex flex-column flex-shrink-0 p-2 text-white bg-black" style="width: 20rem">
            <span>Algemeen</span>
            <hr style="color: white" />
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item"><a aria-current="page" asp-controller="Home" asp-action="Index" class="nav-link text-white" title="Klanten"><i class="bi bi-archive"></i>&nbsp;Klanten</a></li>
                <li class="nav-item"><a aria-current="page" asp-controller="Agenda" asp-action="Index" class="nav-link text-white" title="Agenda"><i class="bi bi-calendar"></i>&nbsp;Agenda</a></li>
                <!--
                <li class="nav-item"><a aria-current="page" asp-controller="Home" asp-action="Quotation" class="nav-link text-white" title="Floor"><i class="bi bi-archive"></i>&nbsp;Offertes</a></li>
                <li class="nav-item"><a aria-current="page" asp-controller="Home" asp-action="Index" class="nav-link text-white" title="Floor"><i class="bi bi-file-earmark-text"></i>&nbsp;Orders</a></li>
                -->
                <li class="nav-item"><a aria-current="page" asp-controller="Account" asp-action="Logout" class="nav-link text-white" title="Afmelden"><i class="bi bi-box-arrow-left"></i>&nbsp;Afmelden</a></li>
            </ul>
            
            <span>Administratie</span>
            <hr style="color: white" />
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item"><a asp-controller="User" asp-action="Index" class="nav-link text-white" aria-current="page" title="Gebruikers"><i class="bi bi-people"></i>&nbsp;Gebruikers</a></li>
                <li class="nav-item"><a asp-controller="Status" asp-action="Index" class="nav-link text-white" aria-current="page" title="Status"><i class="bi bi-binoculars-fill"></i>&nbsp;Statussen</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Index" class="nav-link text-white" aria-current="page" title="Floor"><i class="bi bi-file-earmark-medical-fill"></i>&nbsp;Floor</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="StandardColor" class="nav-link text-white" aria-current="page" title="Standard Colors"><i class="bi bi-brush"></i>&nbsp;Standard Colors</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="ExclusiveColor" class="nav-link text-white" aria-current="page" title="Exclusive Colors"><i class="bi bi-brush"></i>&nbsp;Exclusive Colors</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Design" class="nav-link text-white" aria-current="page" title="Designs"><i class="bi bi-bricks"></i>&nbsp;Designs</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Logo" class="nav-link text-white" aria-current="page" title="Logos"><i class="bi bi-tags"></i>&nbsp;Logos</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Measurement" class="nav-link text-white" aria-current="page" title="Measurement"><i class="bi bi-fullscreen-exit"></i>&nbsp;Measurement</a></li>
                <li class="nav-item"><a asp-controller="Floor" asp-action="Construction" class="nav-link text-white" aria-current="page" title="Construction"><i class="bi bi-truck"></i>&nbsp;Construction</a></li>
            </ul>
        </div>
        <div class="b-example-divider"></div>
        <div class="d-flex flex-column align-items-stretch flex-shrink-0" style="width: calc(100vw - 20rem - 0.5rem); background-color: #f5f5f5;">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/datatables/dataTables.min.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        @(await RenderSectionAsync("Scripts", required: false))
    }

</body>
</html>
