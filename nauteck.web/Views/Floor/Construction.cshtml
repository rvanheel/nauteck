@model IEnumerable<nauteck.data.Entities.Floor.FloorConstruction>

<div class="m-2 p-2 rounded-3 border shadow-lg">

    <div class="row p-2">
        <div class="col">
            <p class="lead fw-bold text-uppercase">Floor Construction</p>
        </div>
        <div class="col">
            <a class="btn btn-primary text-white float-end" title="Toevoegen"><i class="bi bi-brush"></i>&nbsp;New Floor Construction</a>
        </div>
    </div>

    <table class="table table-striped table-bordered" id="table-construction">
        <thead>
            <tr>
                <th>#</th>
                <th>Description</th>
                <th>Unit Price</th>
                <th>Modified At</th>
                <th>Modified By</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var color in Model)
            {
                <tr>
                    <td><a class="btn btn-sm btn-warning" href=""><i class="bi bi-pencil-square"></i></a></td>
                    <td>@color.Description</td>
                    <td>@color.Price</td>
                    <td>@color.ModifiedAt</td>
                    <td>@color.ModifiedBy</td>
                    <td>
                        @if (color.Active)
                        {
                            <i class="bi bi-check-circle-fill text-success"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger"></i>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', ()=>{
            $("#table-construction").DataTable({
                autoWidth: false,
                columnDefs:[
                    { targets: [0, 5], className: "text-center", orderable: false, searchable: false, width: "2rem"},
                    { targets: [2], type: 'num', width: '8rem' },
                    { targets: [3,4], width: '15rem' }
                ],
                order: [[1, 'asc']],
                deferRender: true,
                processing: true,
                stateSave: true
            });
        });
    </script>
}