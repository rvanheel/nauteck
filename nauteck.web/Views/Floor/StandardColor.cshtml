@model IEnumerable<nauteck.data.Entities.Floor.Color.FloorColor>

<div class="m-2 p-2 rounded-3 border shadow-lg">

    <div class="row p-2">
        <div class="col">
            <p class="lead fw-bold text-uppercase">Standard Colors</p>
        </div>
        <div class="col">
            <a class="btn btn-primary text-white float-end" title="Toevoegen"><i class="bi bi-brush"></i>&nbsp;New Floor Standard Color</a>
        </div>
    </div>


    <table class="table table-striped" id="table-standard-colors">
        <thead>
            <tr>
                <th>#</th>
                <th>Description</th>
                <th>Comment</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var color in Model)
            {
                <tr>
                    <td><a class="btn btn-sm btn-warning" href=""><i class="bi bi-pencil-square"></i></a></td>
                    <td>@color.Description</td>
                    <td>@color.Comment</td>
                    <td>
                        @if (color.Active)
                        {
                            <i class="bi bi-check-circle-fill text-success"></i>
                        }
                        else 
                        {
                            <i class="bi bi-x-circle-fill text-danger"></i>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


@section Scripts {
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', ()=>{
            $("#table-standard-colors").DataTable({
                autoWidth: false,
                columnDefs:[
                    { targets: [0, 3], className: "text-center", orderable: false, searchable: false, width: "2rem"}
                ],
                order: [[1, 'asc']],
                deferRender: true,
                processing: true,
                stateSave: true
            });
        });
    </script>
}