@model nauteck.data.Entities.Client.Client

@{
    var disabled = Model.Id.Equals(Guid.Empty) ? "disabled" : "";
}
<div class="m-3 p-3 rounded-3 border shadow-lg bg-white">

    <div class="row p-3">
        <div class="col">
            <p class="lead fw-bold text-uppercase">Klant Informatie</p>
        </div>
        <div class="col">
        </div>
    </div>

    <nav>
        <div class="nav nav-tabs">
            <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">NAW</button>
            <button class="nav-link" id="nav-attachment-tab" data-bs-toggle="tab" data-bs-target="#nav-attachments" type="button" role="tab" aria-controls="nav-attachments" aria-selected="false" @disabled>Bijlagen</button>
            <button class="nav-link" id="nav-appointments-tab" data-bs-toggle="tab" data-bs-target="#nav-appointments" type="button" role="tab" aria-controls="nav-appointments" aria-selected="false" @disabled>Afspraken</button>
        </div>
    </nav>
    <div class="tab-content">
        <div class="tab-pane fade show active p-2" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            @await Html.PartialAsync("Partials/Naw", Model)
        </div>
        <div class="tab-pane fade p2" id="nav-attachments" role="tabpanel" aria-labelledby="nav-attachments-tab" tabindex="1">
            @await Html.PartialAsync("Partials/Attachments", Model)
        </div>
        <div class="tab-pane fade p2" id="nav-appointments" role="tabpanel" aria-labelledby="nav-appointments-tab" tabindex="2">
            @await Html.PartialAsync("Partials/Appointments", Model)
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/client/edit.js" asp-append-version="true"></script>
}