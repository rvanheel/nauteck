@using nauteck.core.Implementation
<div class="card w-100">
    <div class="card-header">
        <i class="bi bi-telegram"></i>&nbsp;Status
    </div>
    <div class="card-body">
        <div class="row">           

            @for (var i = 0; i < Constants.Status.ALL.Length; i++)
            {
                var status = Constants.Status.ALL[i];

                <div class="col-6">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="status_@i" name="Status" value="@status" checked="@(Model.Status == status)">
                        <label class="form-check-label" for="status_@i">@status</label>
                    </div>
                </div>
            }
        </div>
    </div>
</div>