@using MediatR
@inject IMediator Mediator;

@{
    var floors = await Mediator.Send(new nauteck.core.Features.Floor.FloorQuery());
}
<label class="text-muted small" for="Parts.Floor">Floor</label>
<select class="form-select form-select-sm" id="Parts.Floor" name="Parts.Floor" title="Floor">
    <option data-price="0.00" value=""></option>
    @foreach (var floor in floors.Where(f=>f.Active))
    {
        <option data-price="@floor.Price" value="@floor.Id">@floor.Description</option>
    }
</select>